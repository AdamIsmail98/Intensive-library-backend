generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Category {
  id    String        @id @default(uuid())
  name  String        @unique
  items LibraryItem[]
}

model LibraryItem {
  id             String          @id @default(uuid())
  title          String
  author         String?
  nbrPages       Int?
  runTimeMinutes Int?
  type           LibraryItemType
  isBorrowable   Boolean
  categoryId     String
  category       Category        @relation(fields: [categoryId], references: [id])
  borrower       String?
  borrowDate     DateTime?
}

enum LibraryItemType {
  Book
  DVD
  Audiobook
  Encyclopedia
}
